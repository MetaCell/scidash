FROM postgres:9.4

ARG ROOT=/
ARG APP_DIR=/app

WORKDIR $ROOT

# Install git
RUN apt-get update && \
    apt-get install -y git && \
    apt-get clean;

RUN mkdir $APP_DIR

WORKDIR $APP_DIR
RUN echo "nother test5"
RUN chmod 777 /tmp
RUN git clone -b feature/393 https://github.com/MetaCell/scidash
RUN cp scidash/service/database/backup_database.sh /backup_database.sh
RUN chmod 0644 /backup_database.sh
RUN cp scidash/service/scripts/db-create-psql.sh /docker-entrypoint-initdb.d/db-create-psql.sh
RUN whoami
